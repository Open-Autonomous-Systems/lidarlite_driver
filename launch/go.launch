<launch>
	<!-- configure console output verbosity mode:debug_console.conf or std_console.conf -->
	<env name="ROSCONSOLE_CONFIG_FILE" value="$(find simplenav)/cfg/std_console.conf"/>
    <arg name="debug"       default="true" doc="set True for debug messages"/>
    <env if="$(arg debug)"  name="ROSCONSOLE_CONFIG_FILE" value="$(find simplenav)/cfg/debug_console.conf"/>

	<!-- args namespacing  -->
	<arg name="robot_ns"        default="$(env ROBOT_NAME)" />
    <arg name="launch_prefix"   default="xterm -e gdb --args" /> 

    <group ns="$(arg robot_ns)">
  	    <!-- rosparam command="load" file="$(find simplenav)/params/config_simplenav_m100.yaml" ns="simplenav" / -->
  	    
  	    <rosparam command="load" file="$(find simplenav)/params/config_simplenav_m600pro.yaml" ns="simplenav" />
    	<param name="simplenav/robot_ns"    value="/$(arg robot_ns)" />
        <param name="simplenav/tf_prefix"   value="$(arg robot_ns)" />
        <!-- launch missionselector_node -->
        <!-- node pkg="simplenav" type="simplenav_missionselector_node" name="simplenav_missionselector_node" output="screen"  >
	        <param name="robot_ns"			value="$(arg robot_ns)" />
	        <rosparam command="load" file="$(find simplenav)/params/mission_config.yaml" />
        </node -->
        <!--  Launch simplenav_base_controller_node -->
        <node pkg="simplenav" type="simplenav_base_controller_node" name="simplenav_base_controller_node" output="screen" />
        
        <!--  Launch simplenav_stateestimator_node -->
        <node pkg="simplenav" type="simplenav_stateestimator_node" name="simplenav_stateestimator_node" output="screen" />

        <!--  Launch navigator node -->
        <node pkg="simplenav" type="simplenav_navigator_node" name="simplenav_navigator_node" output="screen" />
    </group>
</launch>
